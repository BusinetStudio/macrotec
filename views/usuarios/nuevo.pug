extends ../layout
block content
    div
        // #Left Sidebar ====================
        include ../sidebar/index
        // #Main ============================
        .page-container
            include ../header
            main.main-content.bgc-grey-100
                #mainContent
                    .container-fluid
                        h4.c-grey-900.mT-10.mB-30 Nuevo Usuario
                        .row.justify-content-center
                            .col-md-6
                                form(action="/usuarios/registro/", method="POST" )
                                    .form-group 
                                        p Nombre Completo
                                        input.form-control(type="text", name="nombreCompleto")
                                    .form-group
                                        p DNI
                                        input.form-control(type="text", name="dni")
                                    .form-group
                                        p Usuario
                                        input.form-control(type="text", name="username")
                                    .form-group
                                        p Email
                                        input.form-control(type="text", name="email")
                                    .form-group
                                        p Tipo de usuario
                                        select.form-control(type="text", name="tipoUsuario")
                                            option(selected disabled) Seleccionar tipo de usuarios
                                            option(value="Admin") Admin
                                            option(value="Vendedor") Vendedor
                                            option(value="Profesor") Profesor
                                            option(value="Alumno") Alumno
                                    .form-group
                                        p Contrase√±a
                                        input.form-control(type="password", name="password")
                                    a.btn.btn-secondary(href="/usuarios/todos" class="mr-2") Cancelar  
                                    input.btn.btn-primary(type='submit' value="Guardar")   
                    
    include ../footer 