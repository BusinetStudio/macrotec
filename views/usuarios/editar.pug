extends ../layout
block content
    div
        // #Left Sidebar ====================
        include ../sidebar/index
        // #Main ============================
        .page-container
            include ../header
            main.main-content.bgc-grey-100
                #mainContent
                    .container-fluid
                        h4.c-grey-900.mT-10.mB-30 Editar Usuario
                        .row.justify-content-center
                            .col-md-6
                                - var editLink = "/usuarios/editar/";
                                form(action=editLink, method="POST" )
                                    .form-group
                                        p Nombre Completo
                                        input.form-control(type="text", value=usuarios.nombreCompleto, name="nombreCompleto")
                                    .form-group
                                        p DNI
                                        input.form-control(type="text", value=usuarios.dni, name="dni")
                                    .form-group
                                        p Usuario
                                        input.form-control(value=usuarios.username, type="text", name="username")
                                    .form-group
                                        p Email
                                        input.form-control(value=usuarios.email, type="text", name="email")
                                    .form-group
                                        p Tipo de usuario
                                        select.form-control(type="text", name="tipoUsuario")
                                            option(selected value=usuarios.tipoUsuario)=usuarios.tipoUsuario
                                            option(value="Admin") Admin
                                            option(value="Vendedor") Vendedor
                                            option(value="Profesor") Profesor
                                            option(value="Alumno") Alumno
                                    .form-group
                                        p Nueva Contrase√±a
                                        input.form-control(type="password", name="password")
                                    input(type="hidden", value=usuarios._id, name="_id")
                                    input.btn.btn-primary(type='submit' value="Guardar")   
                    
    include ../footer 